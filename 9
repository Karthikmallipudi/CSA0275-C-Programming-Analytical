#include <stdio.h>

double findMedianSortedArrays(int array1[], int array2[], int size) {
    int mergedSize = 2 * size;
    int mergedArray[mergedSize];

    int i = 0, j = 0, k = 0;

    while (i < size && j < size) {
        if (array1[i] <= array2[j]) {
            mergedArray[k++] = array1[i++];
        } else {
            mergedArray[k++] = array2[j++];
        }
    }

    while (i < size) {
        mergedArray[k++] = array1[i++];
    }

    while (j < size) {
        mergedArray[k++] = array2[j++];
    }

    if (mergedSize % 2 == 0) {
       
        return (double)(mergedArray[mergedSize / 2 - 1] + mergedArray[mergedSize / 2]) / 2;
    } else {
    
        return (double)mergedArray[mergedSize / 2];
    }
}

int main() {
    int array1[] = {1, 3, 5};
    int array2[] = {2, 4, 6};
    int size = sizeof(array1) / sizeof(array1[0]);

    double median = findMedianSortedArrays(array1, array2, size);

    printf("Median of the two sorted arrays: %lf\n", median);

    return 0;
}
